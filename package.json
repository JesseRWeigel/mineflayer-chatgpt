{
  "name": "minecraft-ai-streamer",
  "version": "2.0.0",
  "description": "An autonomous AI Minecraft bot powered by a local LLM, with Twitch/YouTube chat interaction for 24/7 livestreaming",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "server": "cd server && java -Xmx2G -Xms1G -jar paper.jar --nogui",
    "download-skills": "node scripts/download-voyager-skills.mjs"
  },
  "keywords": [
    "minecraft",
    "ai",
    "llm",
    "twitch",
    "mineflayer",
    "ollama"
  ],
  "author": "JesseRWeigel",
  "license": "MIT",
  "dependencies": {
    "canvas": "^3.2.1",
    "dotenv": "^16.4.0",
    "express": "^5.2.1",
    "mineflayer": "^4.34.0",
    "mineflayer-auto-eat": "^5.0.3",
    "mineflayer-collectblock": "^1.4.1",
    "mineflayer-pathfinder": "^2.4.5",
    "mineflayer-pvp": "^1.3.2",
    "msedge-tts": "^2.0.4",
    "ollama": "^0.5.0",
    "prismarine-viewer": "^1.33.0",
    "rcon-client": "^4.2.5",
    "socket.io": "^4.8.3",
    "tmi.js": "^1.8.5",
    "vec3": "^0.1.10"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.0.0",
    "@types/tmi.js": "^1.8.6",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0"
  }
}
